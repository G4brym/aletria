{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "types": ["@types/node"]
  },
  "include": ["src/*.ts", "src/**/*.ts"]
}
